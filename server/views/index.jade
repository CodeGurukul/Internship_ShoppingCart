extends ./includes/layout
block main
    // carousel here
    #myCarousel.carousel.slide
      // Indicators
      ol.carousel-indicators
        li.active(data-target='#myCarousel', data-slide-to='0')
        |     
        li(data-target='#myCarousel', data-slide-to='1')
        |     
        li(data-target='#myCarousel', data-slide-to='2')
      // Wrapper for slides
      .carousel-inner
        .item.active
          img.img-responsive(src='http://cdn.shopify.com/s/files/1/0695/9547/t/4/assets/slide_1.jpg?8526139331772382456', alt='Sale 1')
          |       
          .carousel-caption
            // caption here
        |     
        .item
          img.img-responsive(src='http://cdn.shopify.com/s/files/1/0695/9547/t/4/assets/slide_2.jpg?8526139331772382456', alt='Sale 2')
          |       
          .carousel-caption
            // caption here
      // Controls
      a.carousel-control.left(href='#myCarousel', data-slide='prev')
        span.icon-prev
      |   
      a.carousel-control.right(href='#myCarousel', data-slide='next')
        span.icon
      |   
      a.carousel-control.right(href='#myCarousel', data-slide='next')
        span.icon
    // div Carousel ends here
