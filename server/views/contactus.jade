extends ./includes/layout
block main
 .contactusform.container
    .row
        .col-md-6.col-md-offset-3
          .well.well-sm
            .jumbotron
              form.form-horizontal(actions="/contactus" method='post')
                fieldset
                  legend.text-center.header Contact us
                  |                         
                  .form-group
                    .col-md-10.col-md-offset-1
                      input#fname.form-control(name='firstName', type='text', placeholder='First Name')
                  |                         
                  .form-group
                    .col-md-10.col-md-offset-1
                      input#lname.form-control(name='lastName', type='text', placeholder='Last Name')
                  |                         
                  .form-group
                    .col-md-10.col-md-offset-1
                      input#email.form-control(name='email', type='email', placeholder='Email Address')
                  |                         
                  .form-group
                    .col-md-10.col-md-offset-1
                      input#phone.form-control(name='phone', type='text', placeholder='Phone')
                  |                         
                  .form-group
                    .col-md-10.col-md-offset-1
                      textarea#message.form-control(name='message', placeholder='Enter your message for us here. We will get back to you within 2 business days.', rows='7')
                  |                         
                  .form-group
                    .col-md-12.text-center
                      button.btn.btn-primary.btn-lg(type='submit') Submit
          |         
         