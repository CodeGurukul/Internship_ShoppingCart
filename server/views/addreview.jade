extends ./includes/layout
block main
		.container
				.row
						.col-md-6.col-md-offset-4
							
								form(action='/addreview' method='post')
									h4(style='color:white') Reviews

									input.form-control(type='text' value='#{name}' name="pid")

									input.form-control(type='value' placeholder='Title' name="title")
									input.form-control(type='value' placeholder='Body' name="text1")
									input.form-control(type='value' placeholder='Rating(0-5)' name="rating")

									button.btn.btn-info(type='submit') Submit